<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" >
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:left="@dimen/_10sdp"
                android:right="@dimen/_10sdp"
                android:bottom="@dimen/_10sdp"
                android:top="@dimen/_10sdp">
                    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                        <solid android:color="@color/colorAccent"/>
                        <stroke android:width="@dimen/_1sdp" android:color="@color/tv_selector" />
                        <size android:height="@dimen/_15sdp" android:width="@dimen/_15sdp"/>
                        <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="10dp"
                            android:bottom="10dp" />


                        <corners android:bottomRightRadius="@dimen/_5sdp"
                            android:bottomLeftRadius="@dimen/_5sdp"
                            android:topLeftRadius="@dimen/_5sdp"
                            android:topRightRadius="@dimen/_5sdp" />
                    </shape>
            </item>
            <item android:state_checked="true"
                android:drawable="@drawable/ic_check"
                android:left="@dimen/_5sdp"
                android:right="@dimen/_5sdp"
                android:bottom="@dimen/_5sdp"
                android:top="@dimen/_5sdp"/>
        </layer-list>

    </item>

    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:left="@dimen/_10sdp"
                android:right="@dimen/_10sdp"
                android:bottom="@dimen/_10sdp"
                android:top="@dimen/_10sdp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <solid android:color="@color/colorAccent"/>
                    <stroke android:width="@dimen/_1sdp" android:color="@color/colorAccent" />
                    <size android:height="@dimen/_15sdp" android:width="@dimen/_15sdp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp" />


                    <corners android:bottomRightRadius="@dimen/_5sdp"
                        android:bottomLeftRadius="@dimen/_5sdp"
                        android:topLeftRadius="@dimen/_5sdp"
                        android:topRightRadius="@dimen/_5sdp" />
                </shape>
            </item>
            <item android:state_checked="true"
                android:drawable="@drawable/ic_check"
                android:left="@dimen/_5sdp"
                android:right="@dimen/_5sdp"
                android:bottom="@dimen/_5sdp"
                android:top="@dimen/_5sdp"/>
        </layer-list>

    </item>
</selector>